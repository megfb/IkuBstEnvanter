@model BstEnvanter.WebUI.Models.AddDepartmentViewModel
@{
    ViewData["Title"] = "AddDepartment";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Yeni Departman Ekle</h1>
        <hr />
    </div>
    <form asp-action="addDepartment" class="col-md-8" method="post">
        <div class="form-group row">
            <label for="inputDepartment" class="col-md-2 col-form-label">Departman</label>
            <div class="col-md-10">
                <input asp-for="department.name" id="inputDepartment" class="form-control" type="text" placeholder="Departman" />
                <span asp-validation-for="department.name"></span>
            </div>
        </div>
        <div class="mt-1 text-end">
            <button class="btn btn-primary col-md-2">Ekle</button>
            <a asp-action="listofdepartment" class="btn btn-info col-md-2">Geri</a>
        </div>
    </form>

</div>