@model BstEnvanter.WebUI.Models.UpdateGpuViewModel
@{
    ViewData["Title"] = "UpdateGpu";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Update a Gpu</h1>
        <hr />
    </div>
    <form asp-action="updategpu" class="col-md-8" method="post">
        <div class="form-group">
            <input asp-for="gpu.name" class="form-control" type="text" placeholder="@Model.gpu.name" />
            <span asp-validation-for="gpu.name"></span>
        </div>
        <div class="form-group text-end">
            <input type="hidden" asp-for="gpu.id" />
            <input type="submit" value="Update" class="btn btn-success col-md-2">
            <a class="btn btn-info col-md-2" asp-action="listofgpu">Back</a>
        </div>
    </form>
</div>

