@model BstEnvanter.WebUI.Models.AddCLocationViewModel
@{
    ViewData["Title"] = "AddCLocation";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Yeni Lokasyon Ekle</h1>
        <hr />
    </div>
    <form asp-action="addclocation" class="col-md-8" method="post">
        <div class="form-group row">
            <label for="inputLocation" class="col-md-2 col-form-label">Lokasyon</label>
            <div class="col-md-10">
                <input asp-for="cLocation.name" id="inputLocation" class="form-control" type="text" placeholder="Lokasyon" />
                <span class="text-danger" asp-validation-for="cLocation.name"></span>
            </div>
        </div>
        <div class="mt-3 text-end">
            <button class="btn btn-primary col-md-2">Ekle</button>
            <a asp-action="listofclocation" style="background-color:#607D8B" class="btn text-white col-md-2">Geri</a>
        </div>
    </form>
</div>
