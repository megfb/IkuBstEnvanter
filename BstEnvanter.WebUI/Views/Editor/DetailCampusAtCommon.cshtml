@model BstEnvanter.WebUI.Models.DetailCampusModel
@{
    ViewData["Title"] = "DetailCampusAtCommon";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">@Model.campus.name - Ortak ürün Listesi</h1>
        <hr />
    </div>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a type="button" asp-action="detailcampus" asp-route-id="@Model.campus.id" class="btn btn-secondary">Depo</a>
        <a type="button" asp-action="detailcampusatpersonel" asp-route-id="@Model.campus.id" class="btn btn-secondary">Personel</a>
        <a type="button" asp-action="detailcampusatcommon" asp-route-id="@Model.campus.id" class="btn btn-secondary">Ortak</a>
        <a type="button" asp-action="addproduct" class="btn btn-secondary">Yeni Ürün</a>
    </div>
    <div class="table-responsive pt-3">
        <table id="detailCampusAtCommon" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">Kategori</th>
                    <th scope="col">Marka</th>
                    <th scope="col">Model</th>
                    <th scope="col">Seri Numarası</th>
                    <th scope="col">Envanter Numarası</th>
                    <th scope="col">Departman</th>
                    <th scope="col">Lokasyon</th>
                    <th scope="col">Detay</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.status)
                    {
                        @if (item.personelId == null && item.commonId != null)
                        {
                            <tr>

                                @if (item.Product.categoryId != null)
                                {
                                    <td>@item.Product.Category.name</td>

                                }
                                @if (item.Product.categoryId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Product.brandId != null)
                                {
                                    <td>@item.Product.Brand.name</td>
                                }
                                @if (item.Product.brandId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Product.modelId != null)
                                {
                                    <td>@item.Product.Model.name</td>

                                }
                                @if (item.Product.modelId == null)
                                {
                                    <td></td>
                                }
                                <td scope="col">@item.Product.serialNo</td>
                                <td scope="col">@item.Product.inventoryNo</td>
                                @if (item.Common.departmentId != null)
                                {
                                    <td scope="col">@item.Common.department.name</td>

                                }
                                @if (item.Common.departmentId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Common.cLocationId != null)
                                {
                                    <td scope="col">@item.Common.CLocation.name</td>

                                }
                                @if (item.Common.cLocationId == null)
                                {
                                    <td></td>
                                }

                                <td scope="col">
                                    <a class="btn btn-info" asp-controller="editor" asp-action="DetailProduct" asp-route-id="@item.id">Detay</a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <div class="text-end my-3">
            <a class="btn btn-primary col-md-2" asp-action="listofcampus">Geri</a>
        </div>
    </div>
</div>
<script src="~/js/detailCampusAtCommon.js" type="text/javascript"></script>
