@model BstEnvanter.WebUI.Models.UpdateHardDriveViewModel
@{
    ViewData["Title"] = "UpdateHardDrive";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="jumbotron jumbotron-fluid">
    <h1 class="display-4">Update a Hard Drive</h1>
    <hr />
</div>
<div class="container-fluid">
    <form asp-action="updateharddrive" class="col-md-8" method="post">
        <div class="form-group">
            <input asp-for="hardDrive.name" class="form-control" type="text" placeholder="@Model.hardDrive.name" />
            <span asp-validation-for="hardDrive.name"></span>
        </div>
        <div class="form-group text-end">
            <input type="hidden" asp-for="hardDrive.id" />
            <input type="submit" value="Update" class="btn btn-success col-md-2">
            <a class="btn btn-info col-md-2" asp-action="listofhardDrive">Back</a>
        </div>
    </form>
</div>

