@model BstEnvanter.WebUI.Models.AddModelViewModel
@{
    ViewData["Title"] = "AddModel";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Yeni Model Ekle</h1>
        <hr />
    </div>
    <form asp-action="addmodel" class="col-md-8" method="post">
        <div class="form-group row pt-4">
            <label for="inputModel" class="col-md-2 col-form-label">Model</label>
            <div class="col-md-10">
                <input asp-for="model.name" id="model" class="form-control" type="text" placeholder="Model" />
                <span class="text-danger" asp-validation-for="model.name"></span>
            </div>
        </div>
        <div class="mt-3 text-end">
            <button class="btn btn-primary col-md-2">Ekle</button>
            <a asp-action="listofmodel" class="btn btn-info col-md-2">Geri</a>
        </div>
    </form>
</div>