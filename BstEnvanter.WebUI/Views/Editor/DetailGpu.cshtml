@model BstEnvanter.WebUI.Models.DetailGpuViewModel
@{
    ViewData["Title"] = "DetailGpu";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">@Model.gpu.name List</h1>
        <hr />
    </div>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a type="button" asp-action="detailgpu" asp-route-id="@Model.gpu.id" class="btn btn-secondary">Product</a>
        <a type="button" asp-action="detailgpuatpersonel" asp-route-id="@Model.gpu.id" class="btn btn-secondary">Personel</a>
        <a type="button" asp-action="detailgpuatcommon" asp-route-id="@Model.gpu.id" class="btn btn-secondary">Commons</a>
        <a type="button" asp-action="addgpu" class="btn btn-secondary">Add A Gpu</a>
    </div>
    <div class="table-responsive pt-3">
        <table id="detailGpuTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Serial No</th>
                <th scope="col">Inventory No</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.status)
                {
                    @if (item.personelId == null && item.commonId == null)
                    {
                        <tr>

                            <td scope="col">@item.Product.Category.name</td>
                            <td scope="col">@item.Product.Brand.name</td>
                            <td scope="col">@item.Product.Model.name</td>
                            <td scope="col">@item.Product.serialNo</td>
                            <td scope="col">@item.Product.inventoryNo</td>
                            <td scope="col">
                                <a class="btn btn-info" asp-controller="editor" asp-action="DetailProduct" asp-route-id="@item.id">Detail</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <div class="text-end my-3">
        <a class="btn btn-primary col-md-2" onClick="history.go(-1); return false;">Back</a>
    </div>
</div>
</div>
<script src="~/js/detailGpuTable.js" type="text/javascript"></script>

