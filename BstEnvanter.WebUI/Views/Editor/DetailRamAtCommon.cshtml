@model BstEnvanter.WebUI.Models.DetailRamViewModel
@{
    ViewData["Title"] = "DetailRamAtCommon";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">@Model.ram.name - Ortak Ürün Listesi<a class="btn-primary rounded-circle" asp-controller="process" asp-action="exportexcel" asp-route-name="listoframatcommon" asp-route-exportName="Ram_Ortak_Ürün_Listesi" asp-route-id="@Model.ram.id"><i class="fs-1 bi bi-printer"></i></a></h1>
        <hr />
    </div>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
        <a type="button" asp-action="detailram" asp-route-id="@Model.ram.id" class="btn btn-secondary">Depo</a>
        <a type="button" asp-action="detailramatpersonel" asp-route-id="@Model.ram.id" class="btn btn-secondary">Personel</a>
        <a type="button" asp-action="detailramatcommon" asp-route-id="@Model.ram.id" class="btn btn-secondary">Ortak</a>
        <a type="button" asp-action="addproduct" class="btn btn-secondary">Yeni Ürün</a>
    </div>
    <div class="table-responsive pt-3">
        <table id="detailRamAtCommonTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
            <tr>
                    <th scope="col">Kategori</th>
                    <th scope="col">Marka</th>
                    <th scope="col">Model</th>
                    <th scope="col">Seri Numarası</th>
                    <th scope="col">Envanter Numarası</th>
                    <th scope="col">Departman</th>
                    <th scope="col">Lokasyon</th>
                    <th scope="col">Detay</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.status)
                {
                    @if (item.personelId == null && item.commonId != null)
                    {
                        <tr>

                                @if (item.Product.categoryId != null)
                                {
                                    <td>@item.Product.Category.name</td>

                                }
                                @if (item.Product.categoryId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Product.brandId != null)
                                {
                                    <td>@item.Product.Brand.name</td>
                                }
                                @if (item.Product.brandId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Product.modelId != null)
                                {
                                    <td>@item.Product.Model.name</td>

                                }
                                @if (item.Product.modelId == null)
                                {
                                    <td></td>
                                }
                                <td scope="col">@item.Product.serialNo</td>
                                <td scope="col">@item.Product.inventoryNo</td>
                                @if (item.Common.departmentId != null)
                                {
                                    <td scope="col">@item.Common.department.name</td>

                                }
                                @if (item.Common.departmentId == null)
                                {
                                    <td></td>
                                }
                                @if (item.Common.cLocationId != null)
                                {
                                    <td scope="col">@item.Common.CLocation.name</td>

                                }
                                @if (item.Common.cLocationId == null)
                                {
                                    <td></td>
                                }

                            <td scope="col">
                                <a class="btn btn-info" asp-controller="editor" asp-action="DetailProduct" asp-route-id="@item.id">Detay</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <div class="text-end my-3">
        <a class="btn btn-primary col-md-2" asp-action="listofram">Geri</a>
    </div>
</div>
</div>
<script src="~/js/detailRamAtCommonTable.js" type="text/javascript"></script>
