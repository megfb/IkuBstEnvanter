@model BstEnvanter.WebUI.Models.ListOfCategoryViewModel
@{
    ViewData["Title"] = "ListOfCategory";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Category List</h1>
        <hr />
    </div>
    <a asp-action="addcategory" class="btn btn-secondary">Add A Category</a>

    <div class="table-responsive pt-3">

        <table id="categoryTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.category)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">
                                <a class="btn btn-warning" asp-controller="editor" asp-action="UpdateCategory" asp-route-id="@item.id">Update </a>
                            </td>
                            <td scope="col">
                                <a class="btn btn-danger" asp-controller="editor" asp-action="DeleteCategory" asp-route-id="@item.id">Delete</a>
                            </td>
                            @*<td scope="col">
                    <a class="btn btn-primary" asp-controller="editor" asp-action="detailcategory" asp-route-id="@item.id">Detail</a>
                    </td>*@
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script src="~/js/categoryTable.js" type="text/javascript"></script>
