@model BstEnvanter.WebUI.Models.ListOfHardDriveViewModel
@{
    ViewData["Title"] = "ListOfHardDrive";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Hard Drive List</h1>
        <hr />
    </div>
    <a asp-action="addharddrive" class="btn btn-secondary">Add A Hard Drive</a>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>

            @{
                foreach (var item in Model.hardDrive)
                {
                    <tr>
                        <td scope="col">@item.id</td>
                        <td scope="col">@item.name</td>
                        <td scope="col">
                            <a class="btn btn-warning" asp-controller="editor" asp-action="updateharddrive" asp-route-id="@item.id">Update </a>
                        </td>
                        <td scope="col">
                            <a class="btn btn-danger" asp-controller="editor" asp-action="deleteharddrive" asp-route-id="@item.id">Delete</a>
                        </td>
                        <td scope="col">
                            <a class="btn btn-primary" asp-controller="editor" asp-action="detailharddrive" asp-route-id="@item.id">Detail</a>
                        </td>
                    </tr>
                }
            }


        </tbody>
    </table>

</div>
