@model BstEnvanter.WebUI.Models.ListOfModelViewModel

@{
    ViewData["Title"] = "ListOfModel";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Model List</h1>
        <hr />
    </div>
    <a asp-action="addmodel" class="btn btn-secondary">Add A Model</a>
    <div class="table-responsive pt-3">

        <table id="modelTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.model)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">
                                <a class="btn btn-warning" asp-controller="editor" asp-action="updatemodel" asp-route-id="@item.id">Update </a>
                            </td>
                            <td scope="col">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Delete
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                Are you sure to delete? This action cannot be undone!
                                            </div>
                                            <div class="modal-footer">
                                                <a class="btn btn-danger" asp-controller="editor" asp-action="deletemodel" asp-route-id="@item.id">Delete</a>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>

</div>
<script src="~/js/modelTable.js" type="text/javascript"></script>
