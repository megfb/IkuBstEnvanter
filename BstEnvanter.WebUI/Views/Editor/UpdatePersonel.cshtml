@model BstEnvanter.WebUI.Models.UpdatePersonelViewModel
@{
    ViewData["Title"] = "UpdatePersonel";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Update a Personel</h1>
        <hr />
    </div>
    <form method="post" asp-action="updatepersonel" class="p-3 mb-3 col-md-8">
        <div class="form-group row mb-3">
            <label for="inputName" class="col-md-2 col-form-label">Name</label>
            <div class="col-md-10">
                <input asp-for="personel.name" id="inputName" class="form-control" type="text" placeholder="Name" />
                <span asp-validation-for="personel.name"></span>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label for="inputSurname" class="col-md-2 col-form-label">Surname</label>
            <div class="col-md-10">
                <input asp-for="personel.surname" class="form-control" type="text" placeholder="Surname" />
                <span asp-validation-for="personel.surname"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="inputAge" class="col-md-2 col-form-label">Age</label>
            <div class="col-md-10">
                <input asp-for="personel.age" id="inputAge" value="@Model.personel.age" class="form-control" type="text" placeholder="Age" />
                <span asp-validation-for="personel.age"></span>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="inputGender" class="col-md-2 col-form-label">Gender</label>
            <div class="col-md-10">
                <select asp-for="personel.sexId" id="inputGender" class="form-select" asp-items="@(new SelectList(Model.sex,"id","name"))"></select>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="inputDepartment" class="col-md-2 col-form-label">Department</label>
            <div class="col-md-10">
                <select asp-for="personel.departmentId" id="inputDepartment" class="form-control" asp-items="@(new SelectList(Model.department,"id","name"))"></select>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label for="inputGender" class="col-md-2 col-form-label">Gender</label>
            <div class="col-md-10">
                <select asp-for="personel.cLocationId" id="inputGender" class="form-select" asp-items="@(new SelectList(Model.cLocation,"id","name"))"></select>
            </div>
        </div>

        <div class="text-end">
            <input type="hidden" asp-for="personel.id" />
            <button class="btn btn-primary col-md-2">Update</button>
            <a asp-action="listofpersonel" class="btn btn-info col-md-2">Back</a>
        </div>
    </form>
</div>