@model BstEnvanter.WebUI.Models.ListOfDepartmentViewModel
@{
    ViewData["Title"] = "ListOfDepartment";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Department List</h1>
        <hr />
    </div>
    <a asp-action="adddepartment" class="btn btn-secondary">Add A Department</a>
    <div class="table-responsive pt-3">

        <table id="departmentTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Update</th>
                    <th scope="col">Delete</th>
                    <th scope="col">Detail</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.department)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">
                                <a class="btn btn-warning" asp-controller="editor" asp-action="UpdateDepartment" asp-route-id="@item.id">Update</a>
                            </td>
                            <td scope="col">
                                <a class="btn btn-danger" asp-controller="editor" asp-action="DeleteDepartment" asp-route-id="@item.id">Delete</a>
                            </td>
                            <td scope="col">
                                <a class="btn btn-primary" asp-controller="editor" asp-action="Detaildepartmentatpersonel" asp-route-id="@item.id">Detail</a>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>

    </div>
</div>
<script src="~/js/departmentTable.js" type="text/javascript"></script>
