@model BstEnvanter.WebUI.Models.ListOfDepartmentViewModel
@{
    ViewData["Title"] = "ListOfDepartment";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Departman Listesi</h1>
        <hr />
    </div>
    <a asp-action="adddepartment" class="btn btn-secondary">Yeni Departman</a>
    <div class="table-responsive pt-3">

        <table id="departmentTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Departman</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Detay</th>
                    <th scope="col">Sil</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.department)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">
                                <a class="btn text-white"style="background-color:#90A4AE" asp-controller="editor" asp-action="UpdateDepartment" asp-route-id="@item.id">Güncelle</a>
                            </td>
                            <td scope="col">
                                <a class="btn btn-secondary" asp-controller="editor" asp-action="Detaildepartmentatpersonel" asp-route-id="@item.id">Detay</a>
                            </td>
                            <td scope="col">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Sil
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Uyarı</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                Silme işlemi için emin misiniz? Bu işlem geri alınamaz!
                                            </div>
                                            <div class="modal-footer">
                                                <a class="btn btn-danger" asp-controller="editor" asp-action="DeleteDepartment" asp-route-id="@item.id">Evet</a>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>

    </div>
</div>
<script src="~/js/departmentTable.js" type="text/javascript"></script>
