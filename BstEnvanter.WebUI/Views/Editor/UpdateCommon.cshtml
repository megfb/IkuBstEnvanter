@model BstEnvanter.WebUI.Models.AddCommonViewModel
@{
    ViewData["Title"] = "UpdateCommon";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="containter-fluid">
        <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Update a Common</h1>
        <hr />
    </div>
    <form class="col-md-8" method="post" asp-action="addproducttocommon">
        <div class="form-group">
            <label for="inputDepartment" class="form-label">Department</label>
            <select asp-for="common.departmentId" id="inputDepartment" class="form-select" asp-items="@(new SelectList(Model.department,"id","name"))"></select>
        </div>
        <div class="form-group pt-3">
            <label for="inputLocation" class="form-label">Location</label>
            <select asp-for="common.cLocationId"id="inputLocation" class="form-select" asp-items="@(new SelectList(Model.clocation,"id","name"))"></select>
        </div>
        <div class="mt-1 text-end">
            <button class="btn btn-primary col-md-2" asp-route-id="@Model.id">Add</button>
            <a asp-action="listofproductatcommon" class="btn btn-info col-md-2">Back</a>
        </div>
    </form>
</div>