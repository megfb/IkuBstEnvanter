@model BstEnvanter.WebUI.Models.UpdateCategoryViewModel
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="container-fluid">
        <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Update a Category</h1>
        <hr />
    </div>
    <form asp-action="updatecategory" class="col-md-8" method="post">
        <div class="form-group">
            <input asp-for="category.name" class="form-control" type="text" placeholder="@Model.category.name" />
            <span asp-validation-for="category.name"></span>
        </div>
        <div class="form-group text-end">
            <input type="hidden" asp-for="category.id" />
            <input type="submit" value="Update" class="btn btn-success col-md-2">
            <a class="btn btn-info col-md-2" asp-action="listofcategory">Back</a>
        </div>
    </form>
</div>