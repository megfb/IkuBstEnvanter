@model BstEnvanter.WebUI.Models.ListOfUserViewModel
@{
    ViewData["Title"] = "ListOfUsers";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">User List</h1>
        <hr />
    </div>
    <a asp-action="register" asp-controller="account" class="btn btn-secondary">Add a New User</a>
    <div class="table-responsive pt-3">
        <table id="userTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Department</th>
                    <th scope="col">Title</th>
                    <th scope="col">Detail</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.users)
                    {
                        <tr>
                            <td scope="col">@item.name</td>
                            <td scope="col">@item.surname</td>
                            <td scope="col">@item.department</td>
                            <td scope="col">@item.title</td>
                            <td scope="col">
                                <a class="btn btn-primary" asp-action="detailuser" asp-route-id="@item.Id">Detail </a>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
</div>
<script src="~/js/userTable.js" type="text/javascript"></script>