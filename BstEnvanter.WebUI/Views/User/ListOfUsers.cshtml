@model BstEnvanter.WebUI.Models.ListOfUserViewModel
@{
    ViewData["Title"] = "ListOfUsers";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">User List</h1>
        <hr />
    </div>
    <a asp-action="register" asp-controller="account" class="btn btn-secondary">Add a New User</a>
    <div class="table-responsive pt-3">
        <table id="userTable" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Surname</th>
                    <th scope="col">Department</th>
                    <th scope="col">Title</th>
                    <th scope="col">Detail</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.users)
                    {
                        <tr>
                            <td scope="col">@item.name</td>
                            <td scope="col">@item.surname</td>
                            <td scope="col">@item.department</td>
                            <td scope="col">@item.title</td>
                            <td scope="col">
                                <a class="btn btn-primary" asp-action="detailuser" asp-route-id="@item.Id">Detail </a>
                            </td>
                            <td scope="col">
                                <a class="btn btn-warning" asp-action="updateuser" asp-route-id="@item.Id">Update </a>
                            </td>
                            <td scope="col">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Delete
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                Are you sure to delete? This action cannot be undone!
                                            </div>
                                            <div class="modal-footer">
                                                <a class="btn btn-danger" asp-action="deleteaccount" asp-route-id="@item.Id">Delete </a>
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }


            </tbody>
        </table>
    </div>
</div>
<script src="~/js/userTable.js" type="text/javascript"></script>