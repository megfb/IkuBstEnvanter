@model BstEnvanter.WebUI.Models.ListOfCampusViewModel
@{
    ViewData["Title"] = "ListOfCampus";
    Layout = "~/Views/_readerLayout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Yerleşke Listesi</h1>
        <hr />
    </div>
    <a asp-action="3column" class="btn btn-secondary">Yeni Yerleşke</a>
    <div class="table-responsive pt-3">

        <table id="3column" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Yerleşke</th>
                    <th scope="col">Detay</th>
                </tr>
            </thead>
            <tbody>

                @{
                    foreach (var item in Model.campus)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">
                                <a class="btn btn-secondary" asp-action="detailcampus" asp-route-id="@item.id">Detay</a>
                            </td>
                            
                        </tr>
                    }
                }


            </tbody>
        </table>

    </div>
</div>
<script src="~/js/reader/3column.js" type="text/javascript"></script>
