@model BstEnvanter.WebUI.Models.ListOfPersonelViewModel
@{
    ViewData["Title"] = "ListOfPersonel";
    Layout = "~/Views/_readerLayout.cshtml";
}

<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <h1 class="display-4">Personel Listesi</h1>
        <hr />
    </div>
    <div class="table-responsive pt-3">

        <table id="5column" class="table align-middle table-hover table-sm">
            <thead class="table-light">
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Ad</th>
                    <th scope="col">Soyad</th>
                    <th scope="col">E-Mail</th>
                    <th scope="col">Detay</th>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model.personel)
                    {
                        <tr>
                            <td scope="col">@item.id</td>
                            <td scope="col">@item.name</td>
                            <td scope="col">@item.surname</td>
                            <td scope="col">@item.eMail</td>
                            <td scope="col">
                                <a class="btn btn-secondary" asp-action="detailpersonel" asp-route-id="@item.id">Detay</a>
                            </td>
                          
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
<script src="~/js/reader/5column.js" type="text/javascript"></script>
